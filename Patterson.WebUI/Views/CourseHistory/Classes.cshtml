@{
    ViewBag.Title = "Classes";
}


<script type ="text/javascript">
    $(function () {
        $("#list").jqGrid({
            url: '/CourseHistory/CreateClassTable/', //this is action in controller which returns the json as result.
            datatype: 'json',
            mtype: 'GET',
            colNames: ['Class ID', 'Meeting Times', 'Student Roster', 'Instructor(s)', 'Size Limit', 'Start Date', 'End Date'], //column name
            colModel: [
          { name: 'ID', width: 100, align: 'center' },
          { name: 'Meeting Times', width: 100, align: 'center' },
          { name: 'Student Roster', width: 135, align: 'center' },
          { name: 'Instructor(s)', index: 'Name', width: 135, align: 'center' },
          { name: 'Size Limit', index: 'Location', width: 70, align: 'center' },
          { name: 'Start Date', index: 'Location', width: 70, align: 'center' },
          { name: 'End Date', index: 'Location', width: 70, align: 'center' },
          ],
            pager: jQuery('#pager'),
            rowNum: 1000,
            rowList: [5, 10, 20, 50],
            sortname: 'Id',
            sortorder: "desc",
            viewrecords: true,
            caption: 'Classes'
        });
        $("#list").closest(".ui-jqgrid-bdiv").attr("style",
        $("#list").closest(".ui-jqgrid-bdiv").attr("style") + " overflow-y: scroll; ");
        $(".b1").button();
    });
    
    </script>

<h2>Course History</h2>
<table id="list" class="scroll" cellpadding="0" cellspacing="0"></table>
<input type="button" class="b1" value="Return to previous page" onclick="window.location = '/CourseHistory';"/>


