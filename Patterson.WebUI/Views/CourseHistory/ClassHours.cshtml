

@{
    ViewBag.Title = "ClassHour";
}

<h2>Class Hours</h2>
    
<script type ="text/javascript">
    $(function () {
        $("#list").jqGrid({
            url: '/CourseHistory/CreateClassHoursTable/', //this is action in controller which returns the json as result.
            datatype: 'json',
            mtype: 'GET',
            colNames: ['Meeting Day', 'From', 'To'], //column name
            colModel: [
    { name: 'day', width: 70, align: 'center' },
    { name: 'startTime', width: 100, align: 'left' },
    { name: 'endTime', width: 100, align: 'center' },

    ],

            pager: jQuery('#pager'),
            rowNum: 1000,
            rowList: [5, 10, 20, 50],
            sortname: 'day',
            sortorder: "desc",
            viewrecords: true,
            caption: 'Available Class Hours'
        });
        $("#list").closest(".ui-jqgrid-bdiv").attr("style",
        $("#list").closest(".ui-jqgrid-bdiv").attr("style") + " overflow-y: scroll; ");
        $(".b1").button();
    });

</script>


<h2>Course History</h2>
<table id="list" class="scroll" cellpadding="0" cellspacing="0"></table>
<input type="button" class="b1" value="Return to Classes" onclick="window.location = '/CourseHistory/Classes/@Session["ClassID"]';"/>        