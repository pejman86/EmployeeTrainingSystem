@model Patterson.Domain.Entities.Test

@{
    ViewBag.Title = "ViewTest";
}

<h2>ViewTest</h2>
@foreach (var question in Model.Questions)
{
 <p>@Html.Raw(@question.QuestionText)</p>
    
    foreach (var ans in question.Answers)
    {
        
        
        <p>@Html.Raw(HttpUtility.HtmlDecode(ans.AnswerText)) :      @if(ans.Correctness == 0 ){@Html.Raw("Incorrect");}else{ @Html.Raw("Correct")}    </p>
    }

}
<script type='text/javascript' src='/Scripts/csharp_formatter_normal.js'></script>
<script type='text/javascript'>    findAndFormatCSharp();</script>