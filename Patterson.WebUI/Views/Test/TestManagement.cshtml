@{
    ViewBag.Title = "TestManagement";
}

<h2>Test Management</h2>


<table id="list" class="scroll" cellpadding="0" cellspacing="0"></table>
<script type ="text/javascript">
    $(function () {
        $("#list").jqGrid({
            url: '/Test/CreateTestClassGrid', //this is action in controller which returns the json as result.
            datatype: 'json',
            mtype: 'GET',
            colNames: ['ClassID', 'Class Name'/*,'Test Name',''*/, ''], //column name
            colModel: [
          { name: 'Class ID', index: 'Id', width: 100, align: 'center' },
          { name: 'Class Name', width: 300, align: 'left' },
            /*
            { name: 'Test Name',  width: 80, align: 'center' },
            { name: '', width: 100, align: 'center' },*/
            {name: '', width: 100, align: 'center' }
          ],
            pager: jQuery('#pager'),
            rowNum: 1000,
            rowList: [5, 10, 20, 50],
            sortname: 'Id',
            sortorder: "desc",
            viewrecords: true,
            caption: 'Available Courses'
        });
        $("#list").closest(".ui-jqgrid-bdiv").attr("style",
        $("#list").closest(".ui-jqgrid-bdiv").attr("style") + " overflow-y: scroll; ");


        $("#ExamButton").button();
        $("#ExamButton").click(function () {
            location.href = '@Url.Action("Exams/" + Model, "Exam", new { @class = "b1" })'
        });
    });

    </script>

