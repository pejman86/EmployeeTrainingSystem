@{
    ViewBag.Title = "CourseHome";
}

<script type ="text/javascript">
    $(function () {
        $("#list").jqGrid({
            url: '/ClassSchedule/CreateFileGrid/', //this is action in controller which returns the json as result.
            datatype: 'json',
            mtype: 'GET',
            colNames: ['File ID', 'Filename', 'File Type', 'Download file'], //column name
            colModel: [
          { name: 'File ID', width: 100, align: 'center' },
          { name: 'File Name', width: 300, align: 'left' },
          { name: 'File Type', index: 'Id', width: 80, align: 'center' },
          { name: 'Download File', index: 'Name', width: 100, align: 'center' },
          ],
            pager: jQuery('#pager'),
            rowNum: 1000,
            rowList: [5, 10, 20, 50],
            sortname: 'Id',
            sortorder: "desc",
            viewrecords: true,
            caption: 'Available Courses'
        });
        $("#list").closest(".ui-jqgrid-bdiv").attr("style",
        $("#list").closest(".ui-jqgrid-bdiv").attr("style") + " overflow-y: scroll; ");


        $("#ExamButton").button();
        $("#ExamButton").click(function () {
            location.href = '@Url.Action("Exams/" + Model, "Exam", new { @class = "b1" })'
        });
    });

    </script>

<h2>Course Home</h2>
<table id="list" class="scroll" cellpadding="0" cellspacing="0"></table>

